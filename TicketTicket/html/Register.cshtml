@{ 
    Validation.RequireField("username", "Email Address is required");
    Validation.RequireField("password", "Password is required");
    
    Validation.RequireField("first_name", "First Name is required");
    Validation.RequireField("last_name", "Last Name is required");  
    Validation.RequireField("email", "Email Address is required");
    Validation.RequireField("address", "Address is required");
    Validation.RequireField("date_of_birth", "Date of Birth is required");
   
    
    
   
    var username = "";
    var password = "";
    var confirm_pw = "";
    var first_name = "";
    var last_name = "";
    var email = "";
    var address = "";
    var date_of_birth = "";
       
 
    if(IsPost && Validation.IsValid()){
       
        username = Request.Form["username"];
        password = Request.Form["password"];
        first_name = Request.Form["first_name"];
        last_name = Request.Form["last_name"];
        email = Request.Form["email"];
        address = Request.Form["address"];
        date_of_birth = Request.Form["date_of_birth"];
 
        var db = Database.Open("database");
        var insertCommand = "INSERT INTO Users (username, password, first_name, last_name, email, address, date_of_birth) VALUES(@0, @1, @2, @3, @4, @5, @6)";
        db.Execute(insertCommand, username, password, first_name, last_name, email, address, date_of_birth);
        Response.Redirect("Users.cshtml");
    }

   
    
}
 
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>User Registration</title>
    <style type="text/css">
    .field-validation-error {
      
      font-weight:bold;
      color:red;
      font-style: italic; 
     }
    .validation-summary-errors{
      border:2px  red;
      color:red;
      
      font-weight:bold;
      margin:12px;
    }
  </style>
</head>
<body>
  <h1>Registration</h1>
    @Html.ValidationSummary()
  <form method="post">
    <fieldset>
      <legend>User Information</legend>
        <p><label for="username">Username:</label>
         <input type="text" name="username" value="@Request.Form["username"]" />
          @Html.ValidationMessage("username")
      </p>
        <p><label for="password">Password:</label>
         <input type ="password" name="password" value="@Request.Form["password"]" />
          @Html.ValidationMessage("password")
      </p>
        

      <p><label for="first_name">First Name:</label>
         <input type="text" name="first_name" value="@Request.Form["first_name"]" />
          @Html.ValidationMessage("first_name")
      </p>
 
      <p><label for="last_name">Last Name:</label>
         <input type="text" name="last_name" value="@Request.Form["last_name"]" />
          @Html.ValidationMessage("last_name")
      </p>
 
        <p><label for="email">Email Address:</label>
         <input type="text" name="email" value="@Request.Form["email"]" />
          @Html.ValidationMessage("email")
      </p>
 
      <p><label for="address">Address:</label>
         <input type="text" name="address" value="@Request.Form["address"]" />
          @Html.ValidationMessage("address")
      </p>
 
      <p><label for="date_of_birth">Phone Number:</label>
         <input type="date" name="date_of_birth" value="@Request.Form["date_of_birth"]" />
          @Html.ValidationMessage("date_of_birth")
      </p>
 
      <p><input type="submit" name="buttonSubmit" value="Register" /></p>
    </fieldset>
  </form>
</body>
</html>


