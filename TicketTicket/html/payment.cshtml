@{
    var message="";
    // Specify validation requirements for different fields.
    Validation.RequireField("cardtype", "Card type is required");
    Validation.RequireField("cardnumber", "Card number is required");
    Validation.RequireField("cardholder", "Card holder is required");  
    Validation.RequireField("expirymonth", "Expiry is required");
    Validation.RequireField("expiryyear", "Expiry Date is required");
    Validation.RequireField("cvc", "CVC is required");

    Validation.Add("cardnumber", Validator.StringLength(16));
    Validation.Add("expirymonth", Validator.Range(1, 12, "Month must be between 1 and 12"));
    Validation.Add("cvc", Validator.Integer("Please enter an integer"));
    Validation.Add("cvc", Validator.StringLength(3));

    if (IsPost && Validation.IsValid()) {
        string cardtype = Request.Form["cardtype"];
        string cardnumber = Request.Form["cardnumber"];
        string cardholder = Request.Form["cardholder"];
     <text>
    Pay By: @cardholder<br />
    Card Type: @cardtype<br />
    Card Number: @cardnumber<br />
        </text>
        <input type="button" name="confirm" value="Confirm" onClick="location.href='../html/confirmation.html'" />
        <input type="button" value="Modify" />
    }
}

